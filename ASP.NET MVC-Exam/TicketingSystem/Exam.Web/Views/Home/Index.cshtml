@using Exam.Web.Models;
@model IEnumerable<TicketPartialDisplayModel>

@{
    ViewBag.Title = "Home Page";  
}

<h1>Ticketing system</h1>
    <div class="row-fluid">
        @for (int i = 0; i < Model.Count(); i++)
        {
            @:<span class="span4">
                <h2>@Model.ElementAt(i).Title</h2>
                <p><strong>Category: </strong><span>@Model.ElementAt(i).CategoryName</span></p>
                <p><strong>Author: </strong><span>@Model.ElementAt(i).AuthorName</span></p>
                <p><span>@Model.ElementAt(i).NumberOfComments comment(s)</span></p>
                @Html.ActionLink("More details...", "Details", "Ticket", new { id = Model.ElementAt(i).Id }, new { @class = "btn" })
            @:</span>
            
                if ((i + 1) % 3 == 0)
                {
                    @:</div>
                    @:<div class="row-fluid">
                }
        }
</div>
